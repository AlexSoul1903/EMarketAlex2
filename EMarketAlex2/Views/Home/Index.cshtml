@using EMarketAlex2.Core.Aplication.ViewModels.Anuncios
@using EMarketAlex2.Core.Aplication.ViewModels.Categorias
@using EMarketAlex2.Core.Aplication.ViewModels.Users
@{
    ViewData["Title"] = "Home";
  
}

<div class="text-center">
    <h1 class="display-4">Welcome</h1>
    <p>Learn about <a href="https://docs.microsoft.com/aspnet/core">building Web apps with ASP.NET Core</a>.</p>
</div>

<div class="container-fluid">

    <div class="row">

        <div class="col-3">

            <div class="card mb-4 box-shadow">

                <div class="card-header bg-danger"><h3 class="text-light">Filtrar</h3></div>
                <div class="card-body">



                    <h4 class="card-title">Categorias</h4>

                    <form method="post" asp-controller="Home" asp-action="Index">

                        <div class="mb-4">

                            <div class="form-check">
                                <input class="form-check-input" value="null" type="radio" name="IdCategoria" id="category-all" />
                                <label class="form-check-label" for="category-all">Todas</label>
                            </div>
                 


                        </div>

                        @foreach (CategoriasViewModel item in ViewBag.CategoriasList)
                        {



                            <div class="mb-3">
                                <div class="form-check">
                                    <input class="form-check-input" value="@item.IdCategoria" type="radio" name="IdCategoria" id="category-@item.IdCategoria" />
                                    <label class="form-check-label" for="category-@item.IdCategoria">@item.Name</label>
                                </div>
                            </div>

                        }

                        <button class="btn btn-info " type="submit">Filtrar</button>


                    </form>


                </div>

            </div>

        </div>


    </div>


    <div class="col-8">
        <div class="row">


            @if (Model.Count == 0 || Model==null){

                <h2 class="text-danger">No hay anuncios disponibles.</h2>
            }else{

           
                @foreach (AnuncioViewModel item in Model)
                {
               
                   
                        <div class="col-md-4">

                       <div class="card mb-4 box-shadow">

                            <div class="card-header">
                                <div id="carouselExampleIndicators-@item.IdAnuncio" class="carousel slide" data-ride="carousel">
                                    <ol class="carousel-indicators">
                                        <li data-target="#carouselExampleIndicators-@item.IdAnuncio" data-slide-to="0" class="active"></li>
                                        <li data-target="#carouselExampleIndicators-@item.IdAnuncio" data-slide-to="1"></li>
                                        <li data-target="#carouselExampleIndicators-@item.IdAnuncio" data-slide-to="2"></li>
                                        <li data-target="#carouselExampleIndicators-@item.IdAnuncio" data-slide-to="3"></li>
                                        <li data-target="#carouselExampleIndicators-@item.IdAnuncio" data-slide-to="4"></li>
                                    </ol>
                                    <div class="carousel-inner">
                                        <div class="carousel-item active">
                                            <img class="d-block w-100" src="@item.Imagen1" alt="First slide">
                                        </div>

                                        <div class="carousel-item">
                                            <img class="d-block w-100" src="@item.Imagen2" alt="Second slide">
                                        </div>

                                        <div class="carousel-item">
                                            <img class="d-block w-100" src="@item.Imagen3" alt="Third slide">
                                        </div>


                                        <div class="carousel-item">
                                            <img class="d-block w-100" src="@item.Imagen4" alt="Fourth slide">
                                        </div>

                                        <div class="carousel-item">
                                            <img class="d-block w-100" src="@item.Imagen5" alt="Fith slide">
                                        </div>

                                    </div>
                                    <a class="carousel-control-prev" href="#carouselExampleIndicators-@item.IdAnuncio" role="button" data-slide="prev">
                                        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                                        <span class="sr-only">Previous</span>
                                    </a>
                                    <a class="carousel-control-next" href="#carouselExampleIndicators-@item.IdAnuncio" role="button" data-slide="next">
                                        <span class="carousel-control-next-icon" aria-hidden="true"></span>
                                        <span class="sr-only">Next</span>
                                    </a>
                                </div>

                            </div>

                            <div class="card-body">

                                <h4 class="card-title">@item.nombre_anuncio - @item.CategoryName</h4>

                                <p class="card-text">@item.descripcion</p>
                                <p class="card-text">$@item.precio</p>

                                </div>




                       </div>


                   </div>
                   
               }

            }




        </div>



    </div>


</div>
