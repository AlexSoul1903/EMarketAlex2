@using EMarketAlex2.Core.Aplication.ViewModels.Anuncios;

@model List<AnuncioViewModel>

@{

	ViewData["Title"] = "Anuncios";

	}

	<div class="container-fluid">

		<div class="row mb-3">

			<div class="col-3 offset-9">

				<a asp-controller="Anuncios" asp-action="Create" class="btn btn-primary">Crear Anuncio.</a>

			</div>



		</div>

		<div class="row">

			@if (Model ==null || Model.Count==0){

				<h2>No hay anuncios</h2>

			}else{
				

				@foreach(AnuncioViewModel item in Model){


		
					
					<div class="col-4">

						<div class="card shadow-sm">

							<div class="card-header">
								<div id="carouselExampleIndicators-@item.IdAnuncio" class="carousel slide" data-ride="carousel">
  <ol class="carousel-indicators">
									<li data-target="#carouselExampleIndicators-@item.IdAnuncio" data-slide-to="0" class="active"></li>
									<li data-target="#carouselExampleIndicators-@item.IdAnuncio" data-slide-to="1"></li>
									<li data-target="#carouselExampleIndicators-@item.IdAnuncio" data-slide-to="2"></li>
									<li data-target="#carouselExampleIndicators-@item.IdAnuncio" data-slide-to="3"></li>
									<li data-target="#carouselExampleIndicators-@item.IdAnuncio" data-slide-to="4"></li>
  </ol>
  <div class="carousel-inner">
    <div class="carousel-item active">
      <img class="d-block w-100" src="@item.Imagen1" alt="First slide">
    </div>

    <div class="carousel-item">
      <img class="d-block w-100" src="@item.Imagen2" alt="Second slide">
    </div>
	
    <div class="carousel-item">
      <img class="d-block w-100" src="@item.Imagen3" alt="Third slide">
    </div>
	

	<div class="carousel-item">
      <img class="d-block w-100" src="@item.Imagen4" alt="Fourth slide">
    </div>
	
	<div class="carousel-item">
      <img class="d-block w-100" src="@item.Imagen5" alt="Fith slide">
    </div>
	
  </div>
								<a class="carousel-control-prev" href="#carouselExampleIndicators-@item.IdAnuncio" role="button" data-slide="prev">
    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
    <span class="sr-only">Previous</span>
  </a>
								<a class="carousel-control-next" href="#carouselExampleIndicators-@item.IdAnuncio" role="button" data-slide="next">
    <span class="carousel-control-next-icon" aria-hidden="true"></span>
    <span class="sr-only">Next</span>
  </a>
</div>

							</div>

							<div class="card-body">

								<h4 class="card-title">@item.nombre_anuncio - @item.CategoryName</h4>

								<p class="card-text">@item.descripcion</p>
								<p class="card-text">$@item.precio</p>
							
								<div class="d-flex justify-content-between align-items-center">

									<div class="btn-group">

										<a asp-controller="Anuncios" asp-action="Edit" asp-route-id="@item.IdAnuncio" class="btn btn-sm btn-outline-warning">Editar</a>
										<a asp-controller="Anuncios" asp-action="Delete" asp-route-id =@item.IdAnuncio class="btn btn-sm btn btn-outline-danger">Borrar</a>

									</div>

								<small class="font-weight-bold fs-6"> Creado por: @item.CreatedBy el @item.CreatedDate</small>



								</div>

							</div>


						</div>



					</div>




				}


			}



		</div>


	</div>