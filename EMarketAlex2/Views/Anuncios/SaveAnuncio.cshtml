												<label class="form-label text-white m-1" asp-for="File5">Choose file</label>
											<input asp-for="File5" class="form-control" />
											</div>
										</div>
									

							}

							<span asp-validation-for="File1" class="text-danger"></span>
							<span asp-validation-for="File2" class="text-danger"></span>
<span asp-validation-for="File3" class="text-danger"></span>
<span asp-validation-for="File4" class="text-danger"></span>
<span asp-validation-for="File5" class="text-danger"></span>


						</div>


						<input type="hidden" asp-for="IdAnuncio">


								<button type="submit" class=" btn btn-success text-white">Crear</button>
						<a asp-controller="Anuncios" asp-action="Index" class="btn btn-warning text-white">Volver atras</a>

						
						</form>

					}


				</div>




			</div>




		</div>



	</div>



