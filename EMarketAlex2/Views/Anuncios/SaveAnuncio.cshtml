@using EMarketAlex2.Core.Aplication.ViewModels.Anuncios;

@model SaveAnuncioViewModel;

@{
	bool editMode = Model.IdAnuncio == 0 ? false : true;

	ViewData["Title"] = "Guardar Anuncio";

}

<div class="container-fluid">

	<div class=row>

		<div class="col-6 offset-3">

			<div class="card">


				<div class="card-header bg-dark text-light">

					<h4>@(editMode ? $"Editando el anuncio: {Model.nombre_anuncio}.": "Creando un nuevo anuncio.") </h4>


				</div>

				<div class="card-body">

					@if(Model.CategoriaList== null || Model.CategoriaList.Count==0){

