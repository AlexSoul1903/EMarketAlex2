						<a asp-controller="Anuncios" asp-action="Index" class="btn btn-warning">Volver atras.</a>
					}else{

						<form method="post" asp-controller="Anuncios" asp-action="@(editMode ? "Edit": "Create")" enctype="multipart/form-data">
							
							<div class="mb-3">
								<label asp-for="nombre_anuncio" class="form-label">Nombre del Anuncio.</label>

								<input type="text" asp-for="nombre_anuncio" class="form-control">
								<span asp-validation-for="nombre_anuncio" class="text-danger"></span>
							</div>
						<div class="mb-3">
							<label asp-for="descripcion" class="form-label">Descripcion del anuncio.</label>
							<input type="text" asp-for="descripcion" class="form-control">
							<span asp-validation-for="descripcion" class="text-danger"></span>

						</div>
						<div class="mb-3">
						<label asp-for="precio" class="form-label">Precio.</label>
						<input type="number" step="any" asp-for="precio" class="form-control">
						<span asp-validation-for="precio" class="text-danger"></span>

						</div>

						<div class="mb-3">

							<label asp-for="miCategoriaId" class="form-label">Seleccione una categoria:</label>
							<select asp-for="miCategoriaId" class="form-select" asp-items="@(new SelectList(Model.CategoriaList,"IdCategoria","Name"))">
						
							<option value="0">Seleccione una opcion.</option>
						</select>

						</div>
						<div class="mb-3">

						
							@if(editMode){
<!--Image-->

    <div class="mb-3 d-flex justify-content-center">
      
  
        <div class="btn btn-primary btn-rounded">
            <label class="form-label text-white m-1" asp-for="File1">Choose file</label>
            <input type="file" class="form-control d-none" asp-for="File1" />
        </div>
    </div>

<!--Avatar-->

    <div class="d-flex justify-content-center mb-3">
   
        <div class="btn btn-primary btn-rounded">
            <label class="form-label text-white m-1" asp-for="File2">Choose file</label>
            <input type="file" class="form-control d-none" asp-for="File2" />
        </div>
    </div>

									
										<div class="d-flex justify-content-center mb-3">
										
											<div class="btn btn-primary btn-rounded">
												<label class="form-label text-white m-1" asp-for="File3">Choose file</label>
												<input type="file" class="form-control d-none" asp-for="File3" />
											</div>
										</div>
								

									
										<div class="d-flex justify-content-center mb-3">

										
											<div class="btn btn-primary btn-rounded">
												<label class="form-label text-white m-1" asp-for="File4">Choose file</label>
												<input type="file" class="form-control d-none" asp-for="File4" />
											</div>
								
									</div>

										<div class="d-flex justify-content-center mb-4">
										
										
									
											<div class="btn btn-primary btn-rounded">
												<label class="form-label text-white m-1" asp-for="File5">Choose file</label>
												<input type="file" class="form-control d-none" asp-for="File5" />
											
										</div>
									</div>




							}else{

									<!--Image-->
								
										<div class="mb-3 d-flex justify-content-center">
										
						
											<div class="btn btn-primary btn-rounded">
												<label class="form-label text-white m-1" asp-for="File1">Choose file</label>

											<input required asp-for="File1" class="form-control" />
											</div>
										</div>
								

									<!--Avatar-->
								
										<div class="d-flex justify-content-center mb-3">
											
									
									
											<div class="btn btn-primary btn-rounded">
												<label class="form-label text-white m-1" asp-for="File2">Choose file</label>
											<input asp-for="File2" class="form-control" />
											</div>
										</div>
									
									
										<div class="d-flex justify-content-center mb-3">
											
										
											<div class="btn btn-primary btn-rounded">
												<label class="form-label text-white m-1" asp-for="File3">Choose file</label>
											<input asp-for="File3" class="form-control" />
											</div>
										</div>
				


									
										<div class="d-flex justify-content-center mb-3">
											
										
											<div class="btn btn-primary btn-rounded">
												<label class="form-label text-white m-1" asp-for="File4">Choose file</label>
											<input asp-for="File4" class="form-control" />
											</div>
										</div>
									
								
