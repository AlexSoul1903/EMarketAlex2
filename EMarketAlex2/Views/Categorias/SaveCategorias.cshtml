@using EMarketAlex2.Core.Aplication.ViewModels.Categorias;
@model SaveCategoriaViewModel

@{

	bool editMode = Model.IdCategoria == 0 ? false : true;
	ViewData["Title"] = "Guardar Categorias";

}

<div class="container-fluid">


	<div class="row">


		<div class="col-6 offset-3">

			<div class="card">

				<div class="card-header bg-dark text-light">

					<h4>@(editMode?$"Editando la categoria: {Model.Name}": "Creando una nueva categoria.")</h4>
				</div>


			</div>
			<div class="card-body">
				
				<form method="post" asp-controller="Categorias" asp-action="@(editMode ? "Edit":"Create")">

					<div class="mb-3">
						<label asp-for="Name" class="form-label">Nombre: </label>
						<input type="text" asp-for="Name" class="form-control" />
						<span asp-validation-for="Name" class="text-danger"></span>
					</div>

					<div class="mb-3">
						<label asp-for="Descripcion" class="form-label">Descripcion: </label>
						<textarea asp-for="Descripcion" class="form-control"></textarea>
					</div>



					<input type="hidden" asp-for="IdCategoria" />

					<button type="submit" class="btn btn-primary">Guardar</button>
					<a asp-controller="Category" asp-action="Index" class="btn btn-warning">Volver atras</a>


				</form>



			</div>

		</div>


	</div>



</div>